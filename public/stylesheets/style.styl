bgColour = #193441
strongColour = #91AA9D
highlightColour = #D1DBBD
brightColour = #FCFFF5
weakColour = #3E606F

body {
    padding: 50px;
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
    background-color: bgColour;
}

a {
    color: #00B7FF;
}

#tweets {
    list-style: none;
    padding: 0;
    margin: 0;
}

#tweets ul {
    padding: 0;
}

.tweet {
    background-color: strongColour;
    border: 1px solid #859C90;
    line-height: 1.25em;
    padding: 0.4em;

    min-height: 5.5em;

    background: -webkit-linear-gradient(top, #9fb8ab, strongColour);
    box-shadow: inset 0px 2px 18px -9px black
}

#tweetSettings {
    background-color: strongColour;
    background: -webkit-linear-gradient(top,#4E707F, weakColour);
    box-shadow: inset 0px 1px 5px 0px black;
    padding: 1.5em;
    color: strongColour;
}

#tweetsContainer, .statistics {
    float: left;
    width: 50%;

    background: -webkit-linear-gradient(top,#a1bAaD, #819A8d);
    box-shadow: inset 0px 2px 18px -9px black
}

.statistics
    background-color: strongColour;

    min-height: 10em


li.language:hover
  background-color strongColour

li.language-active
  background-color strongColour
  font-weight: bold